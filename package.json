{
  "name": "boltz-core",
  "version": "0.0.1",
  "description": "Core library of Boltz",
  "main": "dist/Boltz.js",
  "scripts": {
    "compile": "cross-os precompile && tsc",
    "lint": "tslint --project tsconfig.json && tslint --config tslint-alt.json 'test/**/*.ts'"
  },
  "cross-os": {
    "precompile": {
      "linux": "rm -rf ./dist",
      "darwin": "rm -rf ./dist",
      "win32": "rd /q /s dist || cd ."
    }
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoltzExchange/boltz-core.git"
  },
  "dependencies": {
    "@michael1011/bitcoin-ops": "^1.4.3",
    "bip65": "^1.0.3",
    "bip66": "^1.1.5",
    "bitcoinjs-lib": "^4.0.2",
    "bn.js": "^4.11.8",
    "varuint-bitcoin": "^1.1.0"
  },
  "devDependencies": {
    "@types/bitcoinjs-lib": "^4.0.0",
    "cross-os": "^1.3.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-no-circular-imports": "^0.6.1",
    "typescript": "^3.2.2"
  }
}
