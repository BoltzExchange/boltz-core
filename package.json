{
  "name": "boltz-core",
  "version": "0.3.3",
  "description": "Core library of Boltz",
  "main": "dist/lib/Boltz.js",
  "scripts": {
    "compile": "npm run compile:solidity && npm run compile:typescript",
    "compile:solidity": "buidler compile && npm run compile:solidity:ethers",
    "compile:solidity:ethers": "typechain --target ethers-v5 --outDir typechain/ ./artifacts/ERC20.json && typechain --target ethers-v5 --outDir typechain/ ./artifacts/EtherSwap.json && typechain --target ethers-v5 --outDir typechain/ ./artifacts/ERC20Swap.json",
    "compile:typescript": "tsc",
    "compile:typescript:watch": "tsc --watch",
    "lint": "eslint --max-warnings 0 --ext .ts .",
    "docker:start": "docker run -v `pwd`/docker:/config -d --name boltz-bitcoin -p 18443:18443 boltz/bitcoin-core:0.20.1 --conf=/config/bitcoin.conf",
    "docker:stop": "docker stop boltz-bitcoin && docker rm boltz-bitcoin",
    "test": "npm run test:solidity && npm run test:unit && npm run test:int",
    "test:solidity": "buidler test",
    "test:unit": "jest test-lib/unit",
    "test:int": "jest test-lib/integration --runInBand",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preversion": "npm run lint && npm run compile && npm run test",
    "version": "npm run changelog",
    "prepublishOnly": "npm run compile"
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoltzExchange/boltz-core.git"
  },
  "files": [
    "LICENSE",
    "scripts",
    "artifacts",
    "typechain",
    "README.md",
    "buidler.config.ts",
    "dist/**/!(tsconfig.tsbuildinfo)"
  ],
  "dependencies": {
    "@boltz/bitcoin-ops": "^2.0.0",
    "bip65": "^1.0.3",
    "bip66": "^1.1.5",
    "bitcoinjs-lib": "^5.2.0",
    "bn.js": "^5.1.3",
    "varuint-bitcoin": "^1.1.2"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "1.4.8",
    "@nomiclabs/buidler-ethers": "^2.0.2",
    "@nomiclabs/buidler-etherscan": "^2.1.0",
    "@nomiclabs/buidler-waffle": "^2.1.0",
    "@openzeppelin/contracts": "^3.2.1-solc-0.7 ",
    "@typechain/ethers-v5": "2.0.0",
    "@types/chai": "^4.2.14",
    "@types/jest": "^26.0.15",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.1",
    "@types/ws": "^7.2.7",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "chai": "^4.2.0",
    "conventional-changelog-cli": "^2.1.0",
    "cross-os": "^1.3.0",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "ethereum-waffle": "^3.1.1",
    "ethers": "^5.0.18",
    "jest": "^26.6.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typechain": "^3.0.0",
    "typescript": "^4.0.3",
    "ws": "^7.3.1"
  }
}
