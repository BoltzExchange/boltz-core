{
  "name": "boltz-core",
  "version": "0.0.4",
  "description": "Core library of Boltz",
  "main": "dist/Boltz.js",
  "scripts": {
    "compile": "cross-os precompile && tsc",
    "lint": "tslint --project tsconfig.json && tslint --config tslint-alt.json 'test/**/*.ts'",
    "test": "mocha test/unit/*.spec.ts test/unit/swap/*.spec.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "cross-os": {
    "precompile": {
      "linux": "rm -rf ./dist",
      "darwin": "rm -rf ./dist",
      "win32": "rd /q /s dist || cd ."
    }
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoltzExchange/boltz-core.git"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@boltz/bitcoin-ops": "^2.0.0",
    "bip65": "^1.0.3",
    "bip66": "^1.1.5",
    "bitcoinjs-lib": "^4.0.2",
    "bn.js": "^4.11.8",
    "varuint-bitcoin": "^1.1.0"
  },
  "devDependencies": {
    "@types/bitcoinjs-lib": "^4.0.0",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "conventional-changelog-cli": "^2.0.11",
    "cross-os": "^1.3.0",
    "mocha": "^5.2.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-no-circular-imports": "^0.6.1",
    "typescript": "^3.2.2"
  }
}
